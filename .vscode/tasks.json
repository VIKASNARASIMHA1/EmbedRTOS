{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "if not exist build mkdir build && cd build && cmake -G \"MinGW Makefiles\" .. && mingw32-make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build embedded sensor hub for Windows",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "if exist build rmdir /s /q build",
            "group": "build"
        },
        {
            "label": "Run Simulation",
            "type": "shell",
            "command": ".\\build\\sensor_hub.exe",
            "group": "test",
            "dependsOn": ["Build Project"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": ".\\build\\sensor_hub_test.exe",
            "group": "test",
            "dependsOn": ["Build Project"]
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "if not exist build mkdir build && cd build && cmake -G \"MinGW Makefiles\" .. && mingw32-make && cd .. && .\\build\\sensor_hub.exe",
            "group": "test"
        }
    ]
}